<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance"
           xsd:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="marein_standard_headers_csrf.event_listener.csrf_guard_listener"
                 class="Marein\StandardHeadersCsrfBundle\EventListener\CsrfGuardListener">
            <argument type="service"
                      id="marein_standard_headers_csrf.guard"/>
            <tag name="kernel.event_listener" event="kernel.request"/>
        </service>

        <service id="marein_standard_headers_csrf.guard"
                 class="Marein\StandardHeadersCsrfBundle\Guard\LogicalOrGuard">
            <argument type="collection">
                <argument type="service"
                          id="marein_standard_headers_csrf.guard.request_method_is_safe_guard"/>
                <argument type="service"
                          id="marein_standard_headers_csrf.guard.request_path_matches_allowed_paths_guard"/>
                <argument type="service"
                          id="marein_standard_headers_csrf.guard.origin_header_equals_host_header_guard"/>
                <argument type="service"
                          id="marein_standard_headers_csrf.guard.origin_header_matches_allowed_origins_guard"/>
                <argument type="service"
                          id="marein_standard_headers_csrf.guard.referer_header_guard"/>
                <argument type="service"
                          id="marein_standard_headers_csrf.guard.origin_header_equals_null_guard"/>
            </argument>
        </service>

        <service id="marein_standard_headers_csrf.guard.request_method_is_safe_guard"
                 class="Marein\StandardHeadersCsrfBundle\Guard\RequestMethodIsSafeGuard">
            <argument/>
        </service>

        <service id="marein_standard_headers_csrf.guard.request_path_matches_allowed_paths_guard"
                 class="Marein\StandardHeadersCsrfBundle\Guard\RequestPathMatchesAllowedPathsGuard">
            <argument/>
        </service>

        <service id="marein_standard_headers_csrf.guard.origin_header_equals_host_header_guard"
                 class="Marein\StandardHeadersCsrfBundle\Guard\OriginHeaderEqualsHostHeaderGuard"/>

        <service id="marein_standard_headers_csrf.guard.origin_header_matches_allowed_origins_guard"
                 class="Marein\StandardHeadersCsrfBundle\Guard\OriginHeaderMatchesAllowedOriginsGuard">
            <argument/>
        </service>

        <service id="marein_standard_headers_csrf.guard.referer_header_guard"
                 class="Marein\StandardHeadersCsrfBundle\Guard\LogicalOrGuard">
            <argument type="collection">
                <argument type="service"
                          id="marein_standard_headers_csrf.guard.referer_header_equals_host_header_guard"/>
                <argument type="service"
                          id="marein_standard_headers_csrf.guard.referer_header_matches_allowed_origins_guard"/>
            </argument>
        </service>

        <service id="marein_standard_headers_csrf.guard.referer_header_guard.feature_toggle"
                 class="Marein\StandardHeadersCsrfBundle\Guard\FeatureToggleGuard"
                 decorates="marein_standard_headers_csrf.guard.referer_header_guard">
            <argument/>
            <argument type="service"
                      id=".inner"/>
        </service>

        <service id="marein_standard_headers_csrf.guard.referer_header_equals_host_header_guard"
                 class="Marein\StandardHeadersCsrfBundle\Guard\RefererHeaderEqualsHostHeaderGuard"/>

        <service id="marein_standard_headers_csrf.guard.referer_header_matches_allowed_origins_guard"
                 class="Marein\StandardHeadersCsrfBundle\Guard\RefererHeaderMatchesAllowedOriginsGuard">
            <argument/>
        </service>

        <service id="marein_standard_headers_csrf.guard.origin_header_equals_null_guard"
                 class="Marein\StandardHeadersCsrfBundle\Guard\OriginHeaderEqualsNullGuard"/>

        <service id="marein_standard_headers_csrf.guard.origin_header_equals_null_guard.feature_toggle"
                 class="Marein\StandardHeadersCsrfBundle\Guard\FeatureToggleGuard"
                 decorates="marein_standard_headers_csrf.guard.origin_header_equals_null_guard">
            <argument/>
            <argument type="service"
                      id=".inner"/>
        </service>
    </services>
</container>
